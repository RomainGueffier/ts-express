{
    "compilerOptions": {
        "module": "ES2020",
        "esModuleInterop": true,
        "target": "ES2020",
        "isolatedModules": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
