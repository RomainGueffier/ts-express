{
  "name": "ts-express",
  "version": "1.0.0",
  "description": "Typescript Express Tsoa Template",
  "type": "module",
  "main": "src/app.ts",
  "scripts": {
    "postinstall": "prisma db push & prisma generate & cp -r .prisma dist/",
    "build": "tsoa spec-and-routes & tsc",
    "dev": "nodemon --ext ts --exec \"pnpm build && pnpm start\"",
    "start": "node --env-file .env ./dist/src/app.js",
    "lint": "prisma validate & biome lint ./src",
    "format": "biome format --write ./src",
    "ts": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/node": "22.7.5",
    "@types/swagger-ui-express": "4.1.3",
    "@types/validator": "13.12.2",
    "nodemon": "3.1.7",
    "prisma": "5.20.0",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@prisma/client": "5.20.0",
    "@tsoa/runtime": "6.5.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.21.1",
    "swagger-ui-express": "5.0.1",
    "tsoa": "6.5.1"
  }
}
