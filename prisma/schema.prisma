generator client {
  provider = "prisma-client-js"
  output   = "../.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Civility {
  MR
  MRS
}

model Prospect {
  id                Int      @id @default(autoincrement())
  name              String?
  address           String?
  addressComplement String?
  postalCode        String?
  city              String?
  phone             String?
  mobile            String?
  activity          String?
  email             String?
  workforce         String?
  managerLastname   String?
  managerFirstname  String?
  managerCivility   Civility @default(MR)

  @@index([phone, email])
  @@map("prospects")
}
